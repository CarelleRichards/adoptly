@model SignUpViewModel
@{
    ViewData["Title"] = "Sign up";
}
<div class="row m-5 justify-content-md-center">
    <div class="col-md-6 col-12 p-5 bg-white shadow-sm rounded-3">
        <div>
            <h1 class="adoptly-font-medium mb-1">Sign up</h1>
            <p class="small text-muted">Which are you?</p>
        </div>
        <div class="d-flex flex-column gap-3">
            <form class="d-flex flex-column gap-3" asp-controller="SignUp" asp-action="Submit" novalidate>
                <fieldset class="signup-radio form-group d-flex justify-content-center align-items-center">
                    @foreach (var userType in typeof(UserType).GetEnumNames())
                    {
                        <div class="form-check-inline" id="@userType-userType">
                            <input asp-for="UserType" class="form-check-input" onclick="signupRadio()" type="radio" value="@userType" id="@userType">
                            <label for="@userType" class="form-check-label">@userType</label>
                        </div>
                    }
                    <span asp-validation-for="UserType" class="small adoptly-text-danger d-block"></span>
                </fieldset>
                <div class="d-flex flex-column gap-3">
                    <div id="shelterProperties" class="flex-column gap-3 hidden">
                        <div class="form-group">
                            @Html.DropDownListFor(model => model.State, Html.GetEnumSelectList(typeof(State)), "Select a state...", new { @class = "form-select form-select-lg" })
                            <span asp-validation-for="State" class="small adoptly-text-danger d-block"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Name" class="form-control" placeholder="Enter your name...">
                            <label asp-for="Name" class="control-label"></label>
                            <span asp-validation-for="Name" class="small adoptly-text-danger d-block"></span>
                        </div>
                    </div>
                    <div id="adopterProperties" class="flex-column gap-3 hidden">
                        <div class="form-floating">
                            <input asp-for="FirstName" class="form-control" placeholder="Enter your firstname...">
                            <label asp-for="FirstName" class="control-label"></label>
                            <span asp-validation-for="FirstName" class="small adoptly-text-danger d-block"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="LastName" class="form-control" placeholder="Enter your lastname...">
                            <label asp-for="LastName" class="control-label"></label>
                            <span asp-validation-for="LastName" class="small adoptly-text-danger d-block"></span>
                        </div>
                    </div>
                    <div id="generalProperties" class="flex-column gap-3 hidden">
                        <div class="form-floating">
                            <input asp-for="Email" class="form-control" placeholder="Enter your email...">
                            <label asp-for="Email" class="control-label"></label>
                            <span asp-validation-for="Email" class="small adoptly-text-danger d-block"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" placeholder="Enter your username...">
                            <label asp-for="Username" class="control-label"></label>
                            <span asp-validation-for="Username" class="small adoptly-text-danger d-block"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Password" class="form-control" placeholder="Enter your password...">
                            <label asp-for="Password" class="control-label"></label>
                            <span asp-validation-for="Password" class="small adoptly-text-danger d-block"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Sign up" class="adoptly-btn-primary p-2 rounded-3 w-100">
                        </div>
                    </div>
                </div>
            </form>
            <span class="small text-muted">Already have an account? <a class="adoptly-link" asp-controller="Login" asp-action="Index">Log in</a>.</span>
        </div>
    </div>
</div>

<script src="~/js/signup-nav.js"></script>