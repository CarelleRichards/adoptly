@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}

<div class="row m-5 justify-content-md-center">
    <div class="col-md-6 col-12 p-5 bg-white shadow-sm rounded-3">
        <div>
            <h1 class="adoptly-font-medium mb-1">Change password</h1>
            <p class="small text-muted">Set your new password</p>
        </div>
        <form class="d-flex flex-column gap-3" asp-controller="Email" asp-action="ChangePassword" novalidate>
            <input asp-for="Email" hidden="hidden" class="form-control">
            <div class="form-floating">
                <input asp-for="Password" class="form-control" placeholder="Enter your new password...">
                <label asp-for="Password" class="control-label"></label>
                <span asp-validation-for="Password" class="small adoptly-text-danger d-block"></span>
            </div>
            <div class="form-floating">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your new password...">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <span asp-validation-for="ConfirmPassword" class="small adoptly-text-danger d-block"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change password" class="adoptly-btn-primary p-2 rounded-3 w-100">
            </div>
        </form>
    </div>
</div>